<toast scenario="reminder">    <visual>        <binding template="ToastGeneric">            <image placement="hero" src="C:\Temp\WindowsUpdate\Toast-Notification\hero.jpg"/>            <image placement="appLogoOverride" hint-crop="circle" src="C:\Temp\WindowsUpdate\Toast-Notification\logo.jpg"/>            <text placement="attribution">Koltiv</text>            <text>Windows 11 Upgrade</text>            <group>                <subgroup>                    <text hint-style="title" hint-wrap="true">Windows 11 download in progress</text>                </subgroup>            </group>            <group>                <subgroup>                    <text hint-style="body" hint-wrap="true">Windows 11 installation files are downloading to this device now. Please keep your computer powered on and connected to the internet while we prepare the upgrade.</text>                    <text hint-style="body" hint-wrap="true">We'll send another notification once the reboot is required. Do not shut down during this step.</text>                </subgroup>            </group>        </binding>    </visual>    <audio src="ms-winsoundevent:Notification.Looping.Alarm" silent="true"/>    <actions>        <action activationType="protocol" arguments="Dismiss" content="OK"/>        <action activationType="protocol" arguments="mailto:support@koltiv.com?subject=Windows%2011%20Update%20Notification" content="Contact Koltiv Support"/>    </actions></toast>